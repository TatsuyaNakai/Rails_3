<%= form_with(model: @micropost, local: true) do |f|  %>
  <%= render 'shared/error_messages', object: f.object %>
  <!--パーシャル（エラーメッセージ）にオブジェクト（object:f.object）を渡すためには、
      値がオブジェクトで、キーがパーシャルでの変数名と同じハッシュをつける必要がある。
      fは、[:@micropost]になるから、これでオブジェクトを渡せる。-->
  <div class="field" >
    <%= f.text_area :content, placeholder: "compose new micropost..." %>
  </div>
  <%= f.submit "Post", class:"btn-primary" %>
  <span class="image" >
    <%= f.file_field :image, accept: "image/jpeg,image/git, image/png" %>
  </span>
<% end %>

<!-------------------------エラーメッセージ　jQuery--------------------------------->
<script type="text/javascript">
  $("#micropost_image").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("Maximum file size is 5MB. Please choose a smaller file.");
      $("#micropost_image").val("");
    }
  });
</script>